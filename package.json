{
  "name": "express-docker-demo",
  "version": "0.0.0",
  "description": "Express docker demo app",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app.js",
    "db:migrate": "knex migrate:latest",
    "db:migrate:undo": "knex migrate:rollback --all",
    "db:reset": "run-s db:migrate:undo db:setup",
    "db:seed": "knex seed:run",
    "db:setup": "run-s db:migrate db:seed",
    "prepare": "husky install"
  },
  "author": "Digital Infinity",
  "license": "UNLICENCED",
  "private": true,
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "knex": "^0.95.6",
    "morgan": "^1.10.0",
    "objection": "^2.2.15",
    "objection-password": "^3.0.0",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json}": "prettier --write"
  }
}
